  {
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es2022",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "baseUrl": "./",
      "jsx": "react-jsx",
      "types": ["vitest/globals"],
      "paths": {
        "@app/entrypoint": ["app/entrypoint"],
        "@app/providers": ["app/providers"],
        "@app/root": ["app/root"],
        "@app/routes": ["app/routes"],
        "@app/vite": ["app/vite"],
        "@app/preload": ["app/preload"],
        "@lib/math": ["shared/lib/math"],
        "@lib/types": ["shared/lib/types"],
        "@theme/builder": ["shared/theme/builder"],
        "@theme/common": ["shared/theme/common"],
        "@theme/global": ["shared/theme/global"],
        "@theme/provider": ["shared/theme/provider"],
        "@theme/store": ["shared/theme/store"],
        "styled": ["shared/styled/tools"],
        "@theme/types": ["shared/theme/types"],
        "@theme/font": ["shared/theme/font"],
        "@theme/dark-schema": ["shared/theme/schemas/dark"],
        "@theme/light-schema": ["shared/theme/schemas/light"],
        "@native/deeplink": ["shared/native/deeplink"],
        "@native/fs": ["shared/native/fs"],
        "@native/path": ["shared/native/path"],
        "@native/process": ["shared/native/process"],
        "@native/tools": ["shared/native/tools"],
        "@native/window": ["shared/native/window"],
        "@pages/home": ["pages/home"],
        "@ui/button": ["shared/ui/button"],
        "@ui/icons": ["shared/ui/icons"],
        "@ui/layout": ["shared/ui/layout"],
        "@ui/progress-bar": ["shared/ui/progress-bar"],
        "@ui/spinner": ["shared/ui/spinner"],
        "@storage/db": ["shared/storage/db"],
        "@intl/langs": ["shared/intl/langs"],
        "@intl/provider": ["shared/intl/provider"],
        "@intl/react": ["shared/intl/react"],
        "@intl/store": ["shared/intl/store"],
      }
    },
    "include": ["app/**/*", "dev/**/*", "pages/**/*", "shared/**/*"],
    "exclude": ["**/*.test.{ts,tsx}"]
  }
